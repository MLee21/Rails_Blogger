<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
<p><%= @article.body %></p><br>
<p><%= link_to "Edit", edit_article_path(@article) %></p><br>
<p><%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you would like to delete this article?"} %></p><br>

<h3>Comments (<%= @article.comments.size %>)</h3>
<p><%= render partial: 'articles/comment', collection: @article.comments %></p>
<p><%= render partial: 'comments/form' %></p>
<p><%= link_to "<< Back to Articles List", articles_path %></p>
